@require 'akvariables.styl'

body
  margin: 0 
  font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen,Ubuntu,"Fira Sans","Droid Sans","Helvetica Neue",sans-serif
  font-weight: 400
  font-style: normal
  font-size: 14px
  line-height: 24px
  color: $n900
  background: #fff

hr
  border: 1px solid $n700
  margin: -1px 0
  margin-top: 24px

h1
  font-weight: 400
  font-size: 24px
  margin-top: 24px
  margin-bottom: 24px
  line-height: 32px

h1.title
  font-size: 36px
  line-height: 40px

h2
  font-weight: 400
  font-size: 20px
  line-height: 24px
  margin-top: 24px
  margin-bottom: 24px

h3
  font-weight: 300
  font-size: 16px
  line-height: 24px
  margin-top: 24px
  margin-bottom: 24px

h4
  font-weight: 300
  font-size: 14px
  line-height: 24px
  margin-top: 0
  margin-bottom: 0

h5, h6
  font-weight: 300
  font-size: 12px
  line-height: 24px
  margin-top: 24px
  margin-bottom: 0
  color: $textGray

h6
  text-transform: uppercase

p, ul, ol, pre, table, blockquote
  margin-top: 0
  margin-bottom: 24px

ul ul, ol ol, ul ol, ol ul
  margin-top: 0
  margin-bottom: 0

b, strong, em, small
  line-height: 1
  
code
  line-height: 1
  font-weight: 500
  font-size: 14px

a
  color: #2C5ED0
  text-decoration: none

blockquote
  margin-left: 40px
  margin-right: 40px



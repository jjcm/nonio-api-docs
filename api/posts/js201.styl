@require '../../styles/akvariables.styl'

body.dragging
  user-select: none

c
  font-family: monospace
  background: $ak-color-NA60
  padding: 2px 5px
  border-radius: 3px
.container
  background: #101623
  overflow: hidden
  height: 100px
  position: relative
  margin-bottom: 18px

.draggable
  width: 100px
  height: 100px
  background: $p400
  position: absolute
  cursor: grab
  cursor: -webkit-grab
  top: 0
  left: 0

#example7.container, #example8.container
  height: 300px

#example8
  .draggable
    transition: transform 0.2s $ak-ease-out, box-shadow 0.2s $ak-ease-out
    transform: translateY(0)
    top: 10px
    left: 10px
    box-shadow: 0px 5px 2px 2px rgba(0,0,0,0)
    &.dragging
      transform: translateY(-4px)
      box-shadow: 0px 5px 2px 2px rgba(0,0,0,0.5)
      cursor: grabbing
      cursor: -webkit-grabbing

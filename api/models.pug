block content
  h1 Models
  .models
    .model#model_post
      h2 Post
      :code(javascript)
        post: {
          title: String,
          url: String,
          user: 'user',
          thumbnail: String,
          score: Number,
          date: Date,
          content: String,
          type: String,
          tags: Array('postTag')
        }
    .model#model_user
      h2 User
      :code(javascript)
        user: {
          username: String,
          balance: Number,
          contribution: Number,
          subscription: Date,
          email: String,
          accountConfirmed: Boolean,
          password: String,
          password_change_request_hash: String
        }
    .model#model_post_tag
      h2 PostTag
      :code(javascript)
        postTag: {
          tag: 'tag',
          post: 'post',
          upvotes: Number,
          downvotes: Number,
          date: Date
        }
    .model#model_post_tag_vote
      h2 PostTagVote
      :code(javascript)
        postTag: {
          tag: 'tag',
          post: 'post',
          upvotes: Number,
          downvotes: Number,
          date: Date
        }
    .model#model_tag
      h2 Tag
      :code(javascript)
        tag: {
          name: String,
          createdBy: 'user',
          createdDate: Date
        }
    .model#model_comment
      h2 Comment
      :code(javascript)
        comment: {
          post: 'post',
          type: String,
          content: String,
          text: String,
          user: 'user',
          upvotes: Number,
          downvotes: Number,
          parent: 'comment'
          children: Array('comment')
        }
    .model#model_comment_vote
      h2 CommentVote
      :code(javascript)
        commentVote: {
          comment: 'comment',
          post: 'post',
          user: 'user',
          date: Date,
          positive: Boolean
        }
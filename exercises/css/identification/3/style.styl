body
  margin: 0
#header
  position: fixed
  width: 100%
  height: 50px
  top: 0
  left: 0
  background-color: #00f
  #logo
    position: absolute
    top: 10px
    left: 10px
    width: 30px
    height: 30px
    border-radius: 100%
    background-color: #fff
    background-image: url(p_blank.png)
    background-size: 15px
    background-position: center
    background-repeat: no-repeat
  #login
    position: absolute
    right: 20px
    top: 14px
    color: #fff
#content
  margin: 0 auto
  width: 800px
  background-color: #f00
  padding: 20px
  padding-top: 40px
  .block
    height: 400px
    margin: 10px 0
    background-color: #0f0
    padding: 10px 20px
    .miniblock
      background-color: #afa
      display: inline-block
      margin: 10px
      padding: 10px


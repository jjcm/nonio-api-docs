@require 'akvariables.styl'
@require 'atlaskit-reset.styl'
@require 'akcolor.styl'
@require 'akshadow.styl'
@require 'aktype.styl'
@require 'atlaskit-reduced-ui.styl'
@require 'components/components.styl'

html
  box-sizing: border-box

*, *:before, *:after
  box-sizing: inherit

// override box-sizing for the atlaskit toggle
.ak-field-toggle
  box-sizing: initial

body
  margin: 0
  font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen,Ubuntu,"Fira Sans","Droid Sans","Helvetica Neue",sans-serif
  font-weight: 400
  font-style: normal
  font-size: 14px
  line-height: 24px
  color: $ak-color-N900
  background: #fff
  display: flex

#content
  width: 100%
  padding: 20px

hr
  border: 1px solid #000
  margin: -1px 0
  margin-top: 24px

h1.title
  font-size: 36px
  line-height: 40px

p, ul, ol, pre, table, blockquote
  margin-top: 0
  margin-bottom: 24px

ul ul, ol ol, ul ol, ol ul
  margin-top: 0
  margin-bottom: 0

b, strong, em, small, code
  line-height: 1

a
  color: #2C5ED0
  text-decoration: none

blockquote
  margin-left: 40px
  margin-right: 40px

#blanket
  position: absolute
  width: 100%
  height: 100%
  top: 0px
  left: 0px
  &.on
    background-color: rgba(50,50,50,0.7)
  &.off
    background-color: transparent

#info
  position: fixed
  top: 10px
  right: 10px
  font-size: 20px
  font-family: Arial
  div
    display: inline
    &:after
      content: ' |'
      color: black
  div:last-child
    &:after
      content: ''

#goal
  width: 500px
  position: absolute
  img
    width: 500px
  &.level1
    top: 0px
    left: 0px
  &.level2
    top: 100px
    left: 200px
  &.level3
    bottom: 0px
    left: 600px
  &.level4
    bottom: 300px
    right: 100px
  &.level5
    bottom: 0px
    left: 600px


#ball
  display: inline
  position: absolute
  img
    width: 100px
    height: 100px
  &.level0
    top: -200px
    left: 600px
  &.level1
    top: 20px
    left: 500px
  &.level2
    top: 0px
    left: 0px
  &.level3
    top: 600px
    left: 300px
  &.level4
    top: 0px
    left: 0px
  &.level5
    top: 2000px
    left: 600px

#modal
  position: absolute
  background-color: white
  font-family: Arial
  width: 600px
  border: 2px solid grey
  border-radius: 5px
  padding: 20px
  margin-top: 5%
  margin-left: 30%
  .button
    float: right
    border: 1px solid grey
    background-color: lightgrey
    border-radius: 5px
    cursor: pointer
    padding: 10px
    margin-right: 20px
    &:hover, &:active
      background-color: #eeeeee
  &.off
    top: -1000px
  &.on
    top: initial

#content
  display: flex
  height: 500px
  overflow: hidden
  > div
    margin: 10px
    border-radius: 3px
  #article
    min-width: 300px
    background-color: #ddd
    p
      padding: 0 20px 
  #ourReaders
    min-width: 300px
    width: 300px
    position: relative
    overflow: scroll
    background-color: #ddd
    font-family: sans-serif
    h3
      padding-left: 20px
    &:after
      content: 'no readers found :('
      opacity: 0.5
      display: block
      position: absolute
      padding-top: 20px
      top: 40px
      text-align: center
      width: 100%
      height: 50px
    .user
      margin: 10px
      background-color: #222
      color: #eee
      padding: 10px
      font-size: 12px
      position: relative
      z-index: 1
      .name
        font-size: 14px
        font-weight: bold
        padding-left: 50px
        &:before
          content: ''
          position: absolute
          left: 10px
          width: 40px
          height: 40px
          border-radius: 100%
          background-image: url(frank.jpg)
          background-size: cover
          background-color: #fff
      .age
        padding-left: 50px
        opacity: 0.8
      .bio
        margin-top: 16px

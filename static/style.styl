:root 
  --background: #1D2637
  --text-color: #BBC7DE
  --code-bg: #101725
  --link-color: #4D8BFE
  --sidebar-width: 320px

*
  box-sizing: border-box

body
  margin: 0
  background-color: var(--background)
  color: var(--text-color)
  font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen,Ubuntu,"Fira Sans","Droid Sans","Helvetica Neue",sans-serif
  font-size: 14px
  line-height: 24px
  display: flex
  
::-webkit-scrollbar
  width: 12px
  height: 10px
  background: var(--code-bg)

  &-track
    -webkit-box-shadow: inset 0 0 2px rgba(0,0,0,1)

  &-thumb
    background-color: rgba(255,255,255,0.2)
    
  &-corner
    background-color: var(--code-bg)

h1,h2,h3
  color: white

h1
  font-weight: 400
  margin-top: 16px
  margin-bottom: 0
  &:not(:first-child)
    margin-top: 72px

h2
  font-weight: 100
  font-size: 20px
  line-height: 24px
  margin-top: 24px
  margin-bottom: 8px
  border-bottom: 1px solid rgba(255,255,255,0.3)
  padding-bottom: 8px
  text-transform: uppercase
  letter-spacing: 1px
  span
    padding: 0 8px 
    border-radius: 3px;
    background-color: #496180
    color: #9dc4f7
    font-size: 10px
    font-weight: bold
    display: inline-block
    line-height: 19px
    transform: translateY(-3px)
    margin-right: 8px

h3
  font-weight: 300
  font-size: 16px
  line-height: 24px
  margin-top: 24px
  margin-bottom: 10px
  opacity: 0.3
  text-transform: uppercase

h4
  font-size: 14px
  line-height: 24px
  margin-top: 0
  margin-bottom: 0
  font-weight: bold

p, ul, ol, pre
  margin-top: 0
  margin-bottom: 24px

a
  color: var(--link-color)

p
  opacity: 0.8
  
code
  line-height: 1
  font-weight: 500
  font-size: 14px

ul
  padding-left: 20px

li
  pre[class*="language-"]
    margin-left: -2px

#content
  .endpoints
    display: flex
    flex-wrap: wrap
    margin-right: -16px
  .column
    max-width: 1200px
    flex: 1
    min-width: 600px
    margin-right: 40px
  .endpoint
    margin-bottom: 72px
    padding-top: 28px
    *:last-child
      margin-bottom: 0px
    &:target
      .content
        background: rgba(142,180,253,0.1)
        margin: -4px -12px -12px
        padding: 4px 12px 12px
        border-radius: 5px
    h2
      margin-top: 8px

.path
  color: #fff
  span
    font-weight: bold

.param
  font-family: monospace
  font-size: 16px
  color: #fff
  span
    color: var(--link-color)

.models
  display: flex
  width: 100%
  flex-wrap: wrap
  margin-top: 28px
  .model
    min-width: 350px
    margin-right: 24px
    flex: 1
    margin-bottom: 24px
    h2
      margin-top: 8px

.parameter
  margin-bottom: 24px
  ul 
    border-left: 2px solid var(--link-color)
    list-style: none
    margin-top: 8px
    padding-left: 12px
    margin-bottom: 0
    li
      margin-bottom: 8px
  h4
    line-height: 14px
    span
      display: inline-block
      height: 14px
      padding: 0 4px
      border-radius: 3px
      background: rgba(255,255,255,0.2)
      font-size: 11px
      text-transform: uppercase
      margin-left: 4px
      color: var(--text-color)

  p
    margin-bottom: 0
  h4
    font-weight: normal
    color: var(--link-color)

#sidebar
  width: var(--sidebar-width)
  min-width: var(--sidebar-width)
  background: var(--code-bg)
  padding: 36px 16px 56px 20px
  height: 100vh
  overflow: auto
  .logo
    position: fixed
    bottom: 0
    left: 0
    background: var(--code-bg)
    width: calc(var(--sidebar-width) - 12px)
    height: 56px
  .endpoint
    display: block
    margin: 0
    padding: 0
    position: relative
  .todo
    color: #fff
    background: var(--link-color)
    padding: 0 4px
    font-size: 10px
    font-weight: bold
    display: inline-block
    line-height: 16px
    height: 16px
    border-radius: 3px
    position: absolute
    right: 0
    top: 4px

  span
    color: #9dc4f7
    font-size: 10px
    font-weight: bold
    display: inline-block
    line-height: 16px
    margin-right: 8px
    opacity: 0.6
    text-decoration: none

  svg
    position: absolute
    bottom: 20px;
    left: 21px;
    opacity: 0.5;
  .category
    font-size: 18px;
    font-weight: bold
    &:not(:first-child)
      margin-top: 24px

#content
  width: 100%
  padding: 20px 40px 200px
  height: 100vh
  overflow: auto